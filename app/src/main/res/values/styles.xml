<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="ButtonStyle">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RegularTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/regular_text_size </item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularTextStyleLight" parent="RegularTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="RegularTextStyleHeader" parent="RegularTextStyle">
        <item name="android:textSize">@dimen/header_text_size </item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
